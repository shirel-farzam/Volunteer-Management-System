<Window x:Class="PL.Volunteer.VolunteerInListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="Volunteer In List Window" Height="640" Width="800"
        Background="#A2D2DF"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <!-- External Grid  -->
    <Grid>
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <!-- Upper Grid -->
            <RowDefinition Height="500*"/>
            <!-- ListView -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>
        <Image  Source="/picture/logo.png"
Width="77" Height="60"
HorizontalAlignment="Left"
VerticalAlignment="Top" Margin="675,490,0,0" Grid.Row="1" RenderTransformOrigin="-0.455,0.5" Grid.RowSpan="2" />
        <!-- Internal, Upper Grid -->
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="57*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="27*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="24*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Sort By:" Grid.Column="0" 
                   HorizontalAlignment="Left" Margin="60,9,0,0"
                   Style="{StaticResource MultiTriggerStyle}" VerticalAlignment="Top"/>

            <!-- ComboBox with binding to Enum values for filtering -->
            <ComboBox VerticalAlignment="Top" 
                      Margin="125,12,0,0" 
                      ItemsSource="{Binding Source={StaticResource VolunteerInListFieldCollectionKey}}" 
SelectedValue="{Binding Path=VolunteerSort, Mode=TwoWay}" 
SelectionChanged="Volunteer_Sort" HorizontalAlignment="Left" Width="170" Height="25" Grid.ColumnSpan="3" />
            <Label Content="Filter By:" 
       Grid.Column="4" 
       HorizontalAlignment="Left" 
       Margin="0,14,0,0" 
       Style="{StaticResource MultiTriggerStyle}"
       VerticalAlignment="Top" Grid.ColumnSpan="2"/>

            <!-- ComboBox for filtering  -->
            <ComboBox VerticalAlignment="Top" 
          Margin="15,14,0,0" 
          ItemsSource="{Binding Source={StaticResource CallTypeCollectionKey}}" 
SelectedValue="{Binding Path=VolunteerFilter, Mode=TwoWay}"
SelectionChanged="Volunteer_Filter" Height="25" Grid.ColumnSpan="3" Grid.Column="5" />

        </Grid>

        <ListView Grid.Row="1" Margin="20,10,20,10" FontFamily="Times New Roman" ItemsSource="{Binding Path=VolunteerInList}" SelectedItem="{Binding SelectedVolunteer}"
          MouseDoubleClick="lsvVolunteerList_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <!-- Existing Columns -->
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#009990" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Full Name" DisplayMemberBinding="{Binding FullName}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#009990" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FullName}" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Active">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Active" FontWeight="Bold" FontSize="14" 
                       Foreground="#009990" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Active, Mode=TwoWay}" IsEnabled="False"
                      HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Total Calls Handled" DisplayMemberBinding="{Binding TotalCallsHandled}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#009990" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalCallsHandled}" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Total Calls Canceled" DisplayMemberBinding="{Binding TotalCallsCanceled}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#009990" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalCallsCanceled}" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Total Calls Expired" DisplayMemberBinding="{Binding TotalCallsExpired}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#009990" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalCallsExpired}" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Current Call ID" DisplayMemberBinding="{Binding CurrentCallId}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#009990" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CurrentCallId}" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Current Call Type" DisplayMemberBinding="{Binding CurrentCallType}">
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" Foreground="#009990" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CurrentCallType}" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Add the "Delete" button column -->
                    <GridViewColumn Header="Actions"  >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <!-- Delete Button for each row -->
                                <Button Content="Delete" Click="DeleteButton_Click" Tag="{Binding Id}" Foreground="#009990"  />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
        <!-- Button -->
        <Button Content="Add" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Height="50" Width="100" Margin="0,10,0,10" 
                Background="#2E5077" Foreground="Black" Click="AddVolunteerButton_Click" />
        <Button Style="{StaticResource BackButtonStyle}" Content="Back" Margin="24,35,0,0" Grid.Row="2" Click="Button_Click" />
    </Grid>

</Window>
