<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="LoginSystem.xaml">

    <Application.Resources>
        <ResourceDictionary>

            <!-- קישור ל-Color.xaml -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ColorLight.xaml" />
                <ResourceDictionary Source="Themes/DarkColor.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- אוספים -->
            <local:VolunteerInListFieldCollection x:Key="VolunteerInListFieldCollectionKey" />
            <local:ClosedCallInListFieldCollection x:Key="ClosedCallInListFieldCollectionKey" />
            <local:CallInListFieldCollection x:Key="CallInListFieldCollectionKey" />
            <local:OpenCallInListCollection x:Key="OpenCallInListCollectionKey" />
            <local:CallTypeCollection x:Key="CallTypeCollectionKey" />
            <local:RoleCollection x:Key="RoleCollectionKey" />
            <local:DistanceCollection x:Key="DistanceCollectionKey" />
            <local:CallStatusCollection x:Key="CallStatusCollectionKey" />

            <!-- ממירים -->
            <local:ConvertRoleToColor x:Key="ConvertRoleToColorKey" />
            <local:ConvertTypeCAllToColor x:Key="ConvertTypeCAllToColorKey" />
            <local:ConvertDistanceToColor x:Key="ConvertDistanceToColorKey" />
            <local:ConvertCallTypeToColor x:Key="ConvertCallTypeToColorKey" />
            <local:NullToVisibilityConverter x:Key="NullToVisibilityConverterKey" />
            <local:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverterKey" />
            <local:ConvertUpdateToTrue x:Key="ConvertUpdateToTrueKey" />
            <local:BoolToTextConverter x:Key="BoolToTextConverterKey" />
            <local:InverseBooleanConverter x:Key="InverseBooleanConverterKey" />

            <!-- עיצוב לכפתור חזרה -->
            <Style x:Key="BackButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="103"/>
                <Setter Property="Height" Value="60"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Margin" Value="22,197,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Path Data="M10,20 L30,10 L30,15 L50,15 L50,25 L30,25 L30,30 Z"
                                      Fill="Black" Stretch="Uniform" 
                                      VerticalAlignment="Top" 
                                      HorizontalAlignment="Left" 
                                      Margin="-4,3,0,0"/>
                                <TextBlock Text="Back" VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           Foreground="{StaticResource ButtonBlue}" 
                                           FontWeight="Bold" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- עיצוב לכפתורים עגולים -->
            <Style TargetType="Button" x:Key="RoundedButtonStyle">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="15" 
                        Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Height" Value="40" />
                <Setter Property="Width" Value="120" />
            </Style>

            <!-- עיצוב לכפתור במצב רחף -->
            <Style TargetType="Button" x:Key="ButtonHoverStyle" BasedOn="{StaticResource RoundedButtonStyle}">
                <Setter Property="Background" Value="{StaticResource ButtonBlue}" />
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="Height" Value="82" />
                <Setter Property="Width" Value="120" />
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" Value="{StaticResource MediumGray}" />
                        <Setter Property="BorderBrush" Value="DarkGray" />
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource ButtonHover}" />
                        <Setter Property="BorderBrush" Value="{StaticResource ButtonPressed}" />
                    </Trigger>
                </Style.Triggers>
            </Style>


            <!-- Data Trigger לשינוי צבע טקסט -->
            <Style TargetType="TextBlock" x:Key="DataTriggerStyle">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=SomeProperty}" Value="True">
                        <Setter Property="Foreground" Value="{StaticResource DarkBlue}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- אנימציית לחיצה על כפתור -->
            <Style x:Key="ButtonClickAnimationStyle" TargetType="Button">
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                 From="1" To="0.5" 
                                                 Duration="0:0:0.3" 
                                                 AutoReverse="True" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Style.Triggers>
            </Style>

            <!-- MultiTrigger -->
            <Style TargetType="Label" x:Key="MultiTriggerStyle">
                <Style.Triggers>
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsMouseOver" Value="True" />
                            <!--<Condition Property="IsEnabled" Value="True" />-->
                        </MultiTrigger.Conditions>
                        <Setter Property="Foreground" Value="{StaticResource ButtonBackground}" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </MultiTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
