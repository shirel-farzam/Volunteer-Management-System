<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="LoginSystem.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Link to the Colors.xaml file -->
                <ResourceDictionary Source="Themes/ColorLight.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Additional resources -->
            <local:VolunteerInListFieldCollection x:Key="VolunteerInListFieldCollectionKey" />
            <local:OpenCallInListCollection x:Key="OpenCallInListCollectionKey" />
            <local:CallTypeCollection x:Key="CallTypeCollectionKey" />
            <local:ConvertRoleToColor x:Key="ConvertRoleToColorKey" />
            <local:ConvertDistanceToColor x:Key="ConvertDistanceToColorKey" />
            <local:ConvertUpdateToTrue x:Key="ConvertUpdateToTrueKey" />
            <local:CallStatusCollection x:Key="CallStatusCollectionKey" />

            <!-- Style for rounded buttons -->
            <Style TargetType="Button" x:Key="RoundedButtonStyle">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="15" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Height" Value="40" />
                <Setter Property="Width" Value="120" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
