<Window x:Class="PL.VolunteerScreens.ChooseCallToTreat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Choose Call to Treat" Height="450" Width="1000"
        Background="{StaticResource ButtonBlue}"
        FontFamily="Segoe UI"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <!-- Styles for controls -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Foreground" Value="#424242"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sorting and Filtering Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <TextBlock Text="Sort By" Margin="0,0,0,5"/>
                <ComboBox Width="200" 
               ItemsSource="{Binding Source={StaticResource OpenCallInListCollectionKey}}" 
               SelectionChanged="CallSelector_Filter" 
               SelectedValue="{Binding OpenCallInList, Mode=TwoWay}" >
               </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <TextBlock Text="Filter By Call Type" Margin="0,0,0,5"/>
                <ComboBox Width="200"
              ItemsSource="{Binding Source={StaticResource TypeOfCallsCollectionKey}}" 
              SelectedValue="{Binding TypeCallInList, Mode=TwoWay}"
              SelectionChanged="Call_Filter">

                </ComboBox>
            </StackPanel>

        </StackPanel>

        <!-- List of open calls -->
        <ListView ItemsSource="{Binding OpenCallList}" SelectionChanged="CallSelector_Filter" Margin="10,8,25,50" Grid.Row="1" Background="#00000000" Grid.RowSpan="2">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Call ID" DisplayMemberBinding="{Binding Id}" Width="100"/>
                    <GridViewColumn Header="Call Type" DisplayMemberBinding="{Binding CallType}" Width="150"/>
                    <GridViewColumn Header="Address" DisplayMemberBinding="{Binding FullAddress}" Width="150"/>
                    <GridViewColumn Header="Distance (km)" DisplayMemberBinding="{Binding DistanceFromVolunteer}" Width="100"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="150"/>
                    <GridViewColumn Header="Opening Time" DisplayMemberBinding="{Binding OpeningTime}" Width="120"/>
                    <GridViewColumn Header="Max Completion Time" DisplayMemberBinding="{Binding MaxCompletionTime}" Width="150"/>

                </GridView>
            </ListView.View>
        </ListView>


        <!-- Details of the selected call -->
        <Border Grid.Row="2" Background="#E3F2FD" CornerRadius="4" Padding="10" Margin="0,10">
            <TextBlock Text="Details of the selected call will appear here" 
                      TextWrapping="Wrap"/>
        </Border>

        <!-- Button to select the call for treatment -->
        <Button Grid.Row="3" Content="Select Call for Treatment" 
                HorizontalAlignment="Right"
                Click="BtnChoose_Click"/>
        <Image  Source="/picture/logo.png" Height="90" Margin="777,-26,47,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
    </Grid>
</Window>
