<Window x:Class="PL.VolunteerScreens.VolunteerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.VolunteerScreens"
        mc:Ignorable="d"
        Title="Volunteer Main Window" Height="650" Width="1100" Background="#F4F7FC">

    <Grid Margin="20">
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Buttons Row -->
            <RowDefinition Height="*" />
            <!-- Main Content Row -->
        </Grid.RowDefinitions>

        <!-- Top Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,10">
            <Button Content="Choose Call" Height="45" Width="150" Margin="0,0,10,0" Background="{StaticResource ButtonBlue}" Foreground="Black" FontWeight="Bold" Click="Button_Click" />
            <Button Content="My Calls History" Height="45" Width="150" Background="{StaticResource ButtonBlue}" Foreground="Black" FontWeight="Bold" Click="BtHistory_Click" />
        </StackPanel>
        <Image Source="/picture/logo.png" Height="77" Width="93" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" 
Stretch="Uniform" Margin="5,-28,0,0"  />
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <!-- Volunteer Details Form -->
                <ColumnDefinition Width="*" />
                <!-- Call Details -->
            </Grid.ColumnDefinitions>

            <!-- Volunteer Details Form -->
            <Border Grid.Column="0" CornerRadius="10" BorderThickness="1" BorderBrush="{StaticResource AccentLight}" Padding="15" Background="White" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Volunteer Details" FontSize="18" FontWeight="Bold" Foreground="#334155" Margin="0,0,0,15" />

                    <!-- Form Fields -->
                    <UniformGrid Columns="2" Rows="0" Margin="0,10" HorizontalAlignment="Left" VerticalAlignment="Top" >
                        <!-- ID -->
                        <Label Content="ID:" FontSize="12" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.Id}" FontSize="12" IsEnabled="False" Foreground="Gray"/>

                        <!-- Full Name -->
                        <Label Content="Full Name:" FontSize="12" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.FullName}" FontSize="12" />

                        <!-- Phone Number -->
                        <Label Content="Phone Number:" FontSize="12" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.PhoneNumber}" FontSize="12" />

                        <!-- Email -->
                        <Label Content="Email:" FontSize="12" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.Email}" FontSize="12" />

                        <!-- Password -->
                        <Label Content="Password:" FontSize="12" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.Password}" FontSize="12" />

                        <!-- Full Address -->
                        <Label Content="Full Address:" FontSize="12" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.FullAddress}" FontSize="12" />

                        <!-- Active -->
                        <Label Content="Active:" FontSize="12" VerticalAlignment="Center" />
                        <CheckBox IsChecked="{Binding CurrentVolunteer.Active}" VerticalAlignment="Center" />

                        <!-- Role (ComboBox for Job) -->
                        <Label Content="Role:" Grid.Row="6" Grid.Column="0" />
                        <ComboBox SelectedValue="{Binding CurrentVolunteer.Job, Mode=TwoWay}" SelectedValuePath="Content"  Grid.Row="6" Grid.Column="1" IsEnabled="False">
                            <ComboBoxItem Content="Manager" />
                            <ComboBoxItem Content="Volunteer" />
                        </ComboBox>


                        <!-- Max Reading -->
                        <Label Content="Max Reading:" FontSize="12" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.MaxReading}" FontSize="12" />

                        <!-- Distance Type -->
                        <Label Content="Distance Type:" FontSize="12" VerticalAlignment="Center" />
                        <ComboBox SelectedValue="{Binding CurrentVolunteer.TypeDistance, Mode=TwoWay}" 
          SelectedValuePath="Content" 
          FontSize="12" >
                            <ComboBoxItem Content="Aerial" />
                            <ComboBoxItem Content="Walking" />
                            <ComboBoxItem Content="Driving" />
                        </ComboBox>

                        <!-- Total Handled Calls -->
                        <Label Content="Total Handled Calls:" FontSize="12" Foreground="Gray" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.TotalHandledCalls}" FontSize="12" IsReadOnly="True" Foreground="Gray" Background="#F5F5F5" BorderBrush="LightGray" />

                        <!-- Total Canceled Calls -->
                        <Label Content="Total Canceled Calls:" FontSize="12" Foreground="Gray" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.TotalCanceledCalls}" FontSize="12" IsReadOnly="True" Foreground="Gray" Background="#F5F5F5" BorderBrush="LightGray" />

                        <!-- Total Expired Calls -->
                        <Label Content="Total Expired Calls:" FontSize="12" Foreground="Gray" VerticalAlignment="Center" />
                        <TextBox Text="{Binding CurrentVolunteer.TotalExpiredCalls}" FontSize="12" IsReadOnly="True" Foreground="Gray" Background="#F5F5F5" BorderBrush="LightGray" />

                    </UniformGrid>

                    <!-- Update Button -->
                    <Button Content="Update" Height="40" Width="100" HorizontalAlignment="Left" Margin="0,15,0,0" Background="{StaticResource Primary}" Foreground="White" FontWeight="Bold" Click="btnAddUpdate_Click" />
                </StackPanel>
            </Border>

            <!-- Call Details -->
            <Border CornerRadius="10" BorderThickness="1" BorderBrush="{StaticResource AccentLight}" Padding="15" Background="White" Grid.ColumnSpan="2" Margin="573,0,0,0">
                <StackPanel>
                    <TextBlock Text="Current Call Details" FontSize="18" FontWeight="Bold" Foreground="#334155" Margin="0,0,0,15" />

                    <!-- Call Fields -->
                    <StackPanel Margin="0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Description -->
                            <TextBlock Text="Description:" FontWeight="Bold" Foreground="#334155" Grid.Row="0" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.Description}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Call ID -->
                            <TextBlock Text="Call ID:" FontWeight="Bold" Foreground="#334155" Grid.Row="1" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.CallId}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Call Type -->
                            <TextBlock Text="Call Type:" FontWeight="Bold" Foreground="#334155" Grid.Row="2" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.CallType}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Full Address -->
                            <TextBlock Text="Full Address:" FontWeight="Bold" Foreground="#334155" Grid.Row="3" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.FullAddress}" Grid.Row="3" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Open Time -->
                            <TextBlock Text="Open Time:" FontWeight="Bold" Foreground="#334155" Grid.Row="4" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.OpenTime, StringFormat=G}" Grid.Row="4" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Max Completion Time -->
                            <TextBlock Text="Max Completion Time:" FontWeight="Bold" Foreground="#334155" Grid.Row="5" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.MaxCompletionTime, StringFormat=G}" Grid.Row="5" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Enter Time -->
                            <TextBlock Text="Enter Time:" FontWeight="Bold" Foreground="#334155" Grid.Row="6" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.EnterTime, StringFormat=G}" Grid.Row="6" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Distance from Volunteer -->
                            <TextBlock Text="Distance from Volunteer:" FontWeight="Bold" Foreground="#334155" Grid.Row="7" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.DistanceFromVolunteer}" Grid.Row="7" Grid.Column="1" Margin="0,0,0,20"/>

                            <!-- Status -->
                            <TextBlock Text="Status:" FontWeight="Bold" Foreground="#334155" Grid.Row="8" Grid.Column="0" Margin="0,0,10,20"/>
                            <TextBlock Text="{Binding CurrentVolunteer.CurrentCall.Status}" Grid.Row="8" Grid.Column="1" Margin="0,0,0,20"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="7,434,0,5" Width="264" Grid.Column="1">
                <Button Content="End Current Call" Height="38" Width="126" Background="{StaticResource SoftBlue}" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" Click="EndCurrentCall_Click" />
                <Button Content="Cancel Call" Height="38" Width="124" Background="{StaticResource SoftBlue}" Foreground="White" FontWeight="Bold" Click="CancelCall_Click" />
            </StackPanel>

        </Grid>
    </Grid>
</Window>
