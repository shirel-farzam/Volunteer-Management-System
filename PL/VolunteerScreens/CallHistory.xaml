<Window x:Class="PL.VolunteerScreens.CallHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.VolunteerScreens"
        mc:Ignorable="d"
        Title="CallHistory" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding ClosedCallsList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Call ID" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Call Type" DisplayMemberBinding="{Binding CallType}" />
                    <GridViewColumn Header="Full Address" DisplayMemberBinding="{Binding FullAddress}" />
                    <GridViewColumn Header="Opening Time" DisplayMemberBinding="{Binding OpeningTime}" />
                    <GridViewColumn Header="Entry Time" DisplayMemberBinding="{Binding EntryTime}" />
                    <GridViewColumn Header="Completion Time" DisplayMemberBinding="{Binding CompletionTime}" />
                    <GridViewColumn Header="Completion Type" DisplayMemberBinding="{Binding CompletionType}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
