<Window x:Class="PL.VolunteerScreens.CallHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.VolunteerScreens"
        mc:Ignorable="d"
        Title="Call History" Height="450" Width="1000"
        Background="{StaticResource ButtonBlue}">


    <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- השורה הראשונה עבור תיבת הבחירה -->
            <RowDefinition Height="5*"/>
            <!-- השורה השנייה עבור ה-DataGrid -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- שורה ראשונה: בחירת סוג הקריאה -->
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Select Call Type:" 
                   Grid.Column="0" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="3,0,0,0"/>

            <ComboBox  ItemsSource="{Binding Source={StaticResource ClosedCallInListFieldCollectionKey}}"  
                      SelectionChanged="cbVSelector_SelectionChanged" 
                      SelectedValue="{Binding ClosedCallInList, Mode=TwoWay}" 
                      Grid.Column="1" Margin="242,0,0,0"/>
            <ComboBox Margin="135,0,30,0"
                      
   ItemsSource= "{Binding Source={StaticResource CallTypeCollectionKey}}"
   SelectionChanged="Call_Filter" 
   SelectedValue="{Binding TypeCallInList, Mode=TwoWay}" />
            <Label Content="select sort  value :" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                Margin="100,0,0,0" Width="135"/>
        </Grid>

        
        <DataGrid Grid.Row="1" 
               ItemsSource="{Binding Path=ClosedCallList}"

                  AutoGenerateColumns="False">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="*"/>
                <DataGridTextColumn Binding="{Binding CallType}" Header="Type" Width="*"/>
                <DataGridTextColumn Binding="{Binding FullAddress}" Header="Full Address" Width="2*"/>
                <DataGridTextColumn Binding="{Binding OpeningTime}" Header="Time Open" Width="*"/>
                <DataGridTextColumn Binding="{Binding EntryTime}" Header="Start Treatment" Width="*"/>
                <DataGridTextColumn Binding="{Binding CompletionTime}" Header="Time Close" Width="*"/>
                <DataGridTextColumn Binding="{Binding CompletionType}" Header="Call Type" Width="*"/>
                </DataGrid.Columns>
        </DataGrid>
        <Button Style="{StaticResource BackButtonStyle}" Content="Back" Margin="24,0,0,0" Grid.Row="2" Click="Button_Click" VerticalAlignment="Center" />
    </Grid>
</Window>
