<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Closed="Window_Closed"
        Loaded="MainWindow_Loaded">
    <Window.Resources>
        <SolidColorBrush x:Key="ButtonBlue" Color="#D9EAFD" />
        <SolidColorBrush x:Key="DarkBlue" Color="#7C93C3" />
        <SolidColorBrush x:Key="LightBlue" Color="#BCCCDC" />
        <SolidColorBrush x:Key="SimulatorBlue" Color="#A5BFCC" />

        <!-- Style for rounded buttons -->
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="15" 
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="120" />
        </Style>
    </Window.Resources>

    <!-- Main Grid Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <!-- System Clock Area -->
            <RowDefinition Height="2*" />
            <!-- Configuration Variables Area -->
            <RowDefinition Height="1*" />
            <!-- Navigation Buttons -->
        </Grid.RowDefinitions>
        <Image Source="C:\Users\ayele\source\repos\dotNet5785_-4642_7701\שיראל ואיילת.png"
       Width="110" Height="71"
       HorizontalAlignment="Left"
       VerticalAlignment="Top" Margin="688,18,0,0" />

        <!-- System Clock Section -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Clock Display -->
            <Label Content="{Binding CurrentTime, StringFormat='{}{0:HH:mm:ss}'}" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="20" 
                   FontWeight="Bold" />

            <!-- Clock Advancement Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,19,0,1">
                <Button Content="Add One Minute" Click="AddOneMinute_Click" Padding="8,5" Margin="5" Height="82" Width="120" Style="{StaticResource RoundedButtonStyle}"
                        Background="{StaticResource ButtonBlue}" Foreground="Black" />
                <Button Content="Add One Hour" Click="AddOneHour_Click" Padding="8,5" Margin="5" Height="82" Width="120" Style="{StaticResource RoundedButtonStyle}"
                        Background="{StaticResource ButtonBlue}" Foreground="Black" />
                <Button Content="Add One Day" Click="AddOneDay_Click" Padding="8,5" Margin="5" Height="82" Width="120" Style="{StaticResource RoundedButtonStyle}"
                        Background="{StaticResource ButtonBlue}" Foreground="Black" />
                <Button Content="Add One Month" Click="AddOneMonth_Click" Padding="8,5" Margin="5" Height="82" Width="120" Style="{StaticResource RoundedButtonStyle}"
                        Background="{StaticResource ButtonBlue}" Foreground="Black" />
                <Button Content="Add One Year" Click="AddOneYear_Click" Padding="8,5" Margin="5" Height="82" Width="120" Style="{StaticResource RoundedButtonStyle}"
                        Background="{StaticResource ButtonBlue}" Foreground="Black" />
            </StackPanel>
        </Grid>
        <Grid Margin="0,108,-5,88" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*" />
                <ColumnDefinition Width="29*" />
            </Grid.ColumnDefinitions>

            <!-- TextBox inside a Border with rounded corners -->
            <Border Background="#F2F9FF" 
        Width="175" Height="33" 
        HorizontalAlignment="Left" 
        VerticalAlignment="Top" 
        Margin="44,86,0,0" 
        CornerRadius="10" 
        Grid.Column="1">
                <TextBox Text="01:00:00" 
             FontSize="16" 
             BorderBrush="Transparent" 
             Background="Transparent" 
             HorizontalContentAlignment="Center" 
             VerticalContentAlignment="Center" 
             Grid.Column="1"/>
            </Border>


            <!-- Risk Range Label -->
            <Label Content="Risk Range:" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Margin="238,86,0,0" 
           Width="107" 
           Height="35"
           FontFamily="Arial" 
           FontSize="14"
           Foreground="#A2D2DF" 
           FontWeight="Bold" RenderTransformOrigin="0.467,-0.224" />


            <Button Content="Update Risk Range" 
        HorizontalAlignment="Left" 
        Padding="10,5" 
        Click="UpdateRiskRange_Click" 
        Width="215" 
        Height="NaN" 
        Style="{StaticResource RoundedButtonStyle}" 
        Background="#A2D2DF" 
        Foreground="Black" 
        Margin="255,126,0,90" Grid.ColumnSpan="2" />

        </Grid>



        <!-- Navigation and Volunteer Section -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0" Margin="28,2,0,-2">
                <Button Content="Initialize Database" Margin="10" Padding="10" Click="InitializeDatabase_Click" Width="136" 
                        Background="{StaticResource LightBlue}" Foreground="Black" Style="{StaticResource RoundedButtonStyle}" />
                <Button Content="Reset Database" Margin="10" Padding="10" Click="ResetDatabase_Click" Width="136" 
                        Background="{StaticResource LightBlue}" Foreground="Black"  Style="{StaticResource RoundedButtonStyle}"/>
            </StackPanel>

            <!-- List Volunteers Button -->
            <Button Content="Handle Volunteers" 
        Margin="85,-103,280,120" Padding="15" 
        Click="btnVolunteer_Click" Height="80"  Width="150" 
        Background="{StaticResource DarkBlue}" Foreground="White" />

            <!-- List Calls Button -->
            <Button Content="Handle Calls" 
        Margin="35,-108,80,125" Padding="15" 
        Click="ListCall_Click" Height="80"  Width="150"
        Grid.Column="2" 
        Background="{StaticResource DarkBlue}" Foreground="White" />

            <Button Content="Simulator" 
        Margin="35,22,80,25" 
        Padding="10" 
        Click="StartSimulator_Click" 
        Width="150"
        Height="50"  
        Style="{StaticResource RoundedButtonStyle}" 
        Background="#4DA1A9" 
        Foreground="Black" 
        Grid.Column="2" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" />


        </Grid>
    </Grid>
</Window>
