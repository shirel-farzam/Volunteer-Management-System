<Window x:Class="PL.Admin.AdminTransition"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Admin"
      mc:Ignorable="d" 
      Title="AdminTransitionPage" d:DesignHeight="765" d:DesignWidth="780" >

    <Grid Background="{StaticResource PrimaryLight}">
        <!-- Define 3 Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Left -->
            <ColumnDefinition Width="*" />
            <!-- Center -->
            <ColumnDefinition Width="*" />
            <!-- Right -->
        </Grid.ColumnDefinitions>

        <!-- Image -->
        <Image Source="C:\Users\ayele\source\repos\dotNet5785_-4642_7701\שיראל ואיילת.png"
               Width="110" Height="71"
               Stretch="Uniform"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="112,19,0,0"
               Grid.Column="2" />

        <!-- Title Label -->
        <Label Content="Admin Transition Window"
               FontSize="32"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,30,0,0"
               Grid.ColumnSpan="3"
               Foreground="{StaticResource AccentDark}" />

        <!-- Volunteer Screen Button (Right) -->
        <Border Background="{StaticResource AccentLight}" CornerRadius="20" Grid.Column="2"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Go to Volunteer Screen"
                    Width="250"
                    Height="70"
                    Background="Transparent"
                    Foreground="Black"
                    FontSize="18"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="NavigateToVolunteerScreen_Click" />
        </Border>

        <!-- Main Management Screen Button (Left) -->
        <Border Background="{StaticResource AccentLight}" CornerRadius="20" Grid.Column="0" Grid.ColumnSpan="2"
                HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,0,0,0">
            <Button Content="Go to Main Management Screen"
                    Width="349"
                    Height="60"
                    Background="Transparent"
                    Foreground="Black"
                    FontSize="18"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="NavigateToManagementScreen_Click" />
        </Border>
    </Grid>
</Window>
