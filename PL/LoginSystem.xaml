<Window x:Class="PL.LoginSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login System" Height="450" Width="800" MinHeight="450" MinWidth="800"  Loaded="LoginSystem_Loaded">

    
    <Grid Background="{DynamicResource BackgroundPrimary}">
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Left Spacer -->
            <ColumnDefinition Width="Auto"/>
            <!-- Central Content -->
            <ColumnDefinition Width="*"/>
            <!-- Right Spacer -->
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Grid.Column="1"
               Content="Welcome Ezer Mzion!" 
               FontSize="24" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               Margin="0,20,0,20" 
               Foreground="{StaticResource DarkGray}"/>

        <!-- Input Section -->
        <StackPanel Grid.Row="1" Grid.Column="1" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- ID Label and TextBox -->
            <Label Content="Enter ID:" FontSize="16" Margin="0,0,0,5" Foreground="{StaticResource DarkGray}"/>
            <TextBox Text="{Binding Id, Mode=TwoWay}" 
                     Padding="10" 
                     FontSize="16" 
                     Background="{StaticResource White}" 
                     BorderBrush="{StaticResource MediumGray}" 
                     BorderThickness="1"/>
            <!-- Password Label and PasswordBox -->
            <Label Content="Enter Password:" FontSize="16" Margin="0,20,0,5" Foreground="{StaticResource DarkGray}" />
            <PasswordBox Padding="10" FontSize="16" Background="{StaticResource White}" BorderBrush="{StaticResource MediumGray}" BorderThickness="1" PasswordChanged="OnPasswordChanged" />

            <!-- Login Button -->
            <Button Content="Login" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Background="{DynamicResource ButtonBackground}" 
                    Foreground="{StaticResource ButtonForeground}" 
                    Padding="10" 
                    Margin="0,20,0,0" 
                    Click="LoginButton_Click" />
        </StackPanel>

        <!-- Logo Image -->
        <Image Grid.Row="0" Grid.Column="2"
               Source="Picture/Logo.png"
               Height="150" 
               VerticalAlignment="Top" 
               Margin="0,4,0,0" 
               Stretch="Uniform" Grid.RowSpan="2" />

        <Button Content="Switch Mode" Width="100" Height="40" 
                Background="{DynamicResource AccentSecondary}" 
                Foreground="{StaticResource White}" 
                Click="SwitchMode_Click"/>
    </Grid>
</Window>
