<Window x:Class="PL.LoginSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login System" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid Background="#F0F0F0">
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Left Spacer -->
            <ColumnDefinition Width="Auto"/>
            <!-- Central Content -->
            <ColumnDefinition Width="*"/>
            <!-- Right Spacer -->
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Grid.Column="1"
               Content="Login System" 
               FontSize="24" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               Margin="0,20,0,20" />

        <!-- Input Section -->
        <StackPanel Grid.Row="1" Grid.Column="1" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- ID Label and TextBox -->
            <Label Content="Enter ID:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Id, Mode=TwoWay}" 
                     Padding="10" 
                     FontSize="16" />

            <!-- Password Label and TextBox -->
            <Label Content="Enter Password:" FontSize="16" Margin="0,20,0,5"/>
            <TextBox Text="{Binding Password, Mode=TwoWay}" 
                     Padding="10" 
                     FontSize="16" />

            <!-- Login Button -->
            <Button Content="Login" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Background="#4DA1A9" 
                    Foreground="White" 
                    Padding="10" 
                    Margin="0,20,0,0" 
                    Click="LoginButton_Click" />
        </StackPanel>

        <!-- Logo Image -->
        <Image Grid.Row="0" Grid.Column="2"
               Source="C:\Users\ayele\source\repos\dotNet5785_-4642_7701\שיראל ואיילת.png"
               Height="130" 
               VerticalAlignment="Top" 
               Margin="58,4,17,0" 
               Stretch="Uniform" Grid.RowSpan="2" />
    </Grid>
</Window>
