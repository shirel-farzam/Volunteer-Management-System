<Window x:Class="PL.CallWindow.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Call" Height="650" Width="826"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Background="{StaticResource ButtonBlue}">

    <Window.Resources>
        <!-- Style for labels -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Foreground" Value="#507687"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <!-- Style for input controls -->
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <!-- Style for ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Background" Value="#FFFAFA"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <!-- Scrollable Grid for form inputs -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" DockPanel.Dock="Top">
            <Grid Margin="20" Width="706">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header Image -->
                <Image Source="/picture/logo.png"
                   Width="110" Height="71"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" 
                   Margin="349,-12,0,0"
                   Grid.Column="1" Grid.RowSpan="2" />

                <!-- ID (Read-only) -->
                <Label Content="ID:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding Call.Id}" Grid.Row="0" Grid.Column="1" Style="{StaticResource InputStyle}"  
                     IsReadOnly="{Binding Call.Id, Converter={StaticResource ConvertUpdateToTrueKey}}" />

                <!-- Type -->
                <Label Content="Type"  Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}" />
               
                <ComboBox SelectedValue="{Binding Call.Type, Mode=TwoWay}" 
       SelectedValuePath="Content" 
       Grid.Row="1" 
       Grid.Column="1" 
       Style="{StaticResource ComboBoxStyle}" Margin="10,0,0,0">
                    <ComboBoxItem Content="None" />
                    <ComboBoxItem Content="Emergency" />
                    <ComboBoxItem Content="NonEmergency" />
                     <ComboBoxItem Content="FollowUp" />
                </ComboBox>
                <!-- Description-->
                <Label Content="Description:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding Call.Description}" Grid.Row="2" Grid.Column="1" Style="{StaticResource InputStyle}" Margin="10,0,0,0" />

                <!-- FullAddress -->
                <Label Content="Full Address:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding Call.FullAddress}" Grid.Row="3" Grid.Column="1" Style="{StaticResource InputStyle}" />

                <!-- OpenTime -->
                <Label Content="Open Time:" Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding Call.OpenTime}" Grid.Row="4" Grid.Column="1" Style="{StaticResource InputStyle}" />

                <!-- MaxEndTime -->
                <Label Content="Max End Time:" Grid.Row="5" Grid.Column="0" Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding Call.MaxEndTime}" Grid.Row="5" Grid.Column="1" Style="{StaticResource InputStyle}" />

                <!-- Status -->
                <Label Content="Status:" Grid.Row="6" Grid.Column="0" Style="{StaticResource LabelStyle}" />
               
                <ComboBox SelectedValue="{Binding Call.Status, Mode=TwoWay}" 
       SelectedValuePath="Content" 
       Grid.Row="6" 
       Grid.Column="1" 
       Style="{StaticResource ComboBoxStyle}" Margin="10,0,0,0">
                    <ComboBoxItem Content="Open" />
                    <ComboBoxItem Content="InProgress" />
                    <ComboBoxItem Content="Closed" />
                    <ComboBoxItem Content="Expired" />
                    <ComboBoxItem Content="OpenRisk" />
                    <ComboBoxItem Content="InProgressRisk" />
                    <ComboBoxItem Content="None" />
                </ComboBox>
                <Button Content="{Binding ButtonText}" 
    Click="btnAddUpdate_Click" 
    Margin="0,20,0,0"
    DockPanel.Dock="Bottom" 
    Height="40" 
    Background="#F8FAFC" 
    Foreground="#507687" 
    FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="13" />

            </Grid>
        </ScrollViewer>

    </DockPanel>
</Window>