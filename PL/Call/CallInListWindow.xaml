<Window x:Class="PL.Call.CallInListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CallInListWindow" Height="450" Width="800"
        Background="{StaticResource ButtonBlue}">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <!-- Filtering and Sorting -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Status:" VerticalAlignment="Center" />
                <ComboBox Width="120" Margin="5,0,10,0"  
                          ItemsSource="{Binding Source={StaticResource CallStatusCollectionKey}}"
                          SelectedValue="{Binding SelectedCallStatus, Mode=TwoWay}" />

                <Label Content="Search by Call ID:" VerticalAlignment="Center" />
                <TextBox Width="200" Margin="5,0,10,0" 
                         Text="{Binding SearchCallId, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Filter" Width="80" Command="{Binding FilterCommand}" />
            </StackPanel>

            <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                      ItemsSource="{Binding CallInList}"
                      SelectionMode="Single" MouseDoubleClick="CallsDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Call ID" Binding="{Binding CallId}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Last Assigned Volunteer" Binding="{Binding LastAssignedTo}" Width="150"/>
                    <DataGridTextColumn Header="Time Left" Binding="{Binding TimeLeft}" Width="100"/>
                    <DataGridTextColumn Header="Completion Time" Binding="{Binding CompletionTime}" Width="100"/>
                    <DataGridTextColumn Header="Assignment Count" Binding="{Binding AssignmentCount}" Width="100"/>
                    <DataGridTemplateColumn Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Delete Button -->
                                    <Button Content="Delete" Command="{Binding DataContext.DeleteCallCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" Margin="0,0,5,0" />
                                    <!-- Cancel Assignment Button -->
                                    <Button Content="Cancel Assignment" Command="{Binding DataContext.CancelAssignmentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
